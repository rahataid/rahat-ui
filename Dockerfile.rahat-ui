# Install dependencies only when needed
FROM node:20-alpine AS deps
WORKDIR /usr/src/app

# Enable pnpm
RUN corepack enable

COPY dist/apps/rahat-ui/package.json ./
RUN pnpm install

FROM node:20-alpine AS runner
WORKDIR /usr/src/app

# Enable pnpm (must run as root before USER node)
RUN corepack enable

USER node

COPY --chown=node:node dist/apps/rahat-ui/ ./
COPY --chown=node:node --from=deps /usr/src/app/node_modules ./node_modules
CMD [ "pnpm", "start" ]
