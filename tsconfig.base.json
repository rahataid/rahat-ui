{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@rahat-ui/community": ["libs/community/src/index.ts"],
      "@rahat-ui/community-query": ["libs/community-query/src/index.ts"],
      "@rahat-ui/query": ["libs/query/src/index.ts"],
      "@rahat-ui/query/*": ["libs/query/src/*"],
      "@rahat-ui/shadcn/*": ["libs/shadcn/*"],
      "@rahat-ui/shadcn/charts": ["libs/shadcn/src/components/charts/index.ts"],
      "@rahat-ui/shadcn/components/*": ["libs/shadcn/src/components/ui/*"],
      "@rahat-ui/shadcn/maps": ["libs/shadcn/src/components/maps/index.ts"],
      "@rahat-ui/shadcn/utils": ["libs/shadcn/src/utils/index.ts"],
      "@rahat-ui/types": ["libs/types/src/index.ts"],
      "@rahat-ui/web3": ["libs/web3/src/index.ts"],
      "@rahat-ui/web3/*": ["libs/web3/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
